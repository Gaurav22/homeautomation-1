        style(type='text/css').
            .graph { height: 320px; }
            #tooltip {
                position: absolute;
                display: none;
                border: 1px solid #424242;
                padding: 2px;
                background-color: #e9ebec;
                opacity: 0.80;
            }
            .sensor {
                text-align: center;
                padding: 10px;
                margin-bottom: 0px;
                min-height: 105px;
            }

            .sensorwrapper {
                padding-right: 10px;
                padding-left: 0px;
                padding-bottom: 10px;
            }

            .sensor .heading {
                font-size: 110%;
                margin-top: 10px;
            }

            .sensor .value {
                font-weight: 900;
                font-size: 160%;
                margin-top: 10px;
            }

        script(type='text/x-handlebars-template', id='status-template')
            div(id='status-{{location}}', class='col-xs-6 col-md-6 sensorwrapper')
                div(class='well sensor col-xs-12 col-md-12')
